{
    "compilerOptions": {
        "target": "ES2015",
        "lib": ["ES2015","DOM"],
        "module": "ESNext",
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitAny": true,        
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "declarationDir": "types",
        "removeComments": false,
    }
}